{
    "name": "simplesamlphp/simplesamlphp",
    "description": "A PHP implementation of a SAML 2.0 service provider and identity provider.",
    "type": "project",
    "keywords": [ "saml2", "shibboleth","oauth","ws-federation","sp","idp" ],
    "homepage": "https://simplesamlphp.org",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Andreas Ã…kre Solberg",
            "email": "andreas.solberg@uninett.no"
        },
        {
            "name": "Olav Morken",
            "email": "olav.morken@uninett.no"
        },
        {
            "name": "Jaime Perez",
            "email": "jaime.perez@uninett.no"
        }
    ],
    "autoload": {
        "psr-4": {
            "SimpleSAML\\": "src/SimpleSAML",
            "SimpleSAML\\Module\\saml\\": "modules/saml/src"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/tine-groupware/ssaml-xml-common.git"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-SPL": "*",
        "ext-date": "*",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-filter": "*",
        "ext-hash": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pcre": "*",
        "ext-posix": "*",
        "ext-session": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "ext-zlib": "*",
        "beste/clock": "~3.0",
        "robrichards/xmlseclibs": "~3.1",
        "simplesamlphp/assert": "~1.9",
        "simplesamlphp/saml2": "~6.0",
        "simplesamlphp/saml2-legacy": "~4.19",
        "simplesamlphp/xml-common": "^2.4",
        "simplesamlphp/xml-security": "~2.0",
        "symfony/config": "~7.4",
        "symfony/dependency-injection": "~7.4",
        "symfony/filesystem": "~7.4",
        "symfony/finder": "~7.4",
        "symfony/http-foundation": "~7.4",
        "symfony/psr-http-message-bridge": "^7.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "simplesamlphp/composer-xmlprovider-installer": true
        }
    },
    "scripts": {
        "phpstan": "XDEBUG_MODE=off php vendor/bin/phpstan analyze --configuration .phpstan.dist.neon",
        "phpstan:baseline": "XDEBUG_MODE=off php vndor/bin/phpstan analyze --configuration .phpstan.dist.neon -b .phpstan.dist.baseline.neon"
    }
}
